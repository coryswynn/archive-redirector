{
  "manifest_version": 3,
  "name": "Redirect to Archive",
  "version": "1.0",
  "description": "Automatically redirects specified news sites to their latest archive on archive.ph.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nytimes.com/*",
        "*://*.barrons.com/*",
        "*://*.fortune.com/*",
        "*://*.wsj.com/*",
        "*://*.bloomberg.com/*",
        "*://*.economist.com/*"
        
      ],
      "js": ["redirect.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://archive.ph/*"],
      "js": ["archive-modify.js"],
      "run_at": "document_end"
    }
  ]
}
